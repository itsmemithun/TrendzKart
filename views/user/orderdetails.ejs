<% layout('layouts/boilerplate') %>

<div class="min-vh-100 min-vw-100 d-flex justify-content-center align-items-center">

  <div class="container d-flex justify-content-center">
    <div class="my-4 bg-color h-100 w-75 shadow row">
      <div class="border-end py-4 ps-4 col-12 col-lg-6">
        <div class="orderDetailsImg shadow rounded">
          <% product.image[0] = product.image[0].replace('public','') %>
          <img class="object-fit-cover rounded" style="width : 100%; height : 100%" src="<%= product.image[0] %>" alt="">
        </div>
        <div class="d-flex mt-2">
          <input id="address" type="radio">
          <label class="link-primary ms-2" for="address">
            <div><%= address.personName %></div>
            <div><%= address.address %></div>
            <span><%= address.district %></span>
            <span><%= address.pincode %></span>
          </label>
        </div>
       <a class="text-decoration-none" href=""><div class="text-end">Select another Address</div></a>
      </div>
      <div class="col-12 col-lg-6 d-flex justify-content-center flex-column align-items-center">
        <div class="w-75">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th class="bg-color h5 border-dark border-end" scope="col"><%= product.productName %></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="bg-color border-dark border-end">Price</td>
                <td class="bg-color"><%= product.price %>
                </td>
              </tr>
              <tr>
                <td class="bg-color border-dark border-end">Quantity</td>
                <td class="bg-color">0</td>
              </tr>
              <tr>
                <td class="bg-color border-dark border-end">Discount</td>
                <td class="bg-color">00</td>
              </tr>
              <tr>
                <td class="bg-color border-dark border-end border-bottom">Delivery</td>
                <td class="bg-color border-dark border-bottom">Free</td>
              </tr>
              <tr>
                <td class="text-end border-dark bg-color border-end">Total</td>
                <td class="bg-color fw-medium">â‚¹<span class="endPrice"><%= product.price %></span>/-</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="mb-4">
          <button productIdData="<%= product._id %>" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn proceedToPaymentBtn shadow btn-warning text-light">Proceed to payments</button>
          <!-- Button trigger modal -->
          <button class="btn btn-dark shadow">Cancel</button>
        </div>
      </div>
    </div>
  </div>

  
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="paymentForm">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Choose Payment Method</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
        <div>
          <input class="disabled" id="upi" value="UPI" name="paymentSelect" type="radio" >
          <label for="upi">UPI</label>
        </div>
        <div>
          <input id="Cod" name="paymentSelect" value="COD" type="radio">
          <label  for="Cod">Cash On Delivery</label>
        </div>
        <div>
          <input id="debitCard" name="paymentSelect" value="Debit Card" type="radio" >
          <label for="debitCard">Debit Card</label>
        </div>
  
      </div>
      <div class="modal-footer">
        <button type="button" class="btn border-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" productIdData="<%= product._id %>" class="btn proceedToPayment">Proceed</button>
      </div>
     </form>
    </div>
  </div>
</div>


<script type="module" src="/script/paymentScript.js"></script>