<% layout('layouts/boilerplate') %>

<div class="vh-100 vw-100 d-flex align-items-center justify-content-center">
  <div class="w-50 h-50 d-flex flex-column align-items-center justify-content-center border rounded">
    <img class="webLogo" src="/asset/Logo's/20240614_131633.png" alt="">
    <div class="w-50">
      <form action="/passwordRecovery" method="post">
        <p>Enter the email addresss associated with the account and we will send an OTP to reset your password</p>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleFormControlInput1" name="email" placeholder="name@example.com" required>
        </div>
        <button class="btn w-100 mt-3 btn-primary">Continue</button>
      </form>
    </div>
  </div>
</div>