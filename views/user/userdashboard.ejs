<% layout('layouts/boilerplate') %>


<div class="d-flex">

  <div class="side-nav d-flex flex-column align-items-center rounded">
    <i class="bi bi-person-circle text-light" style="font-size: 5rem"></i>
    <h2 class="text-light">Username</h2>
      <div class="m-2 px-2 w-100 d-flex flex-column">
        <a href="/user/user_account"><button class="btn btn-light w-100 mb-3">Profile</button></a>
        <a href=""><button class="btn btn-light w-100 mb-3 ">My Orders</button></a>
        <a href=""><button class="btn btn-light w-100 mb-3 ">Cart</button></a>
        <a href=""><button class="btn btn-light w-100 mb-3 ">My Coupons</button></a>
        <a href="/user/user_account/address_management/<%= user._id %>"><button class="btn btn-light w-100 mb-3 ">Manage Address</button></a>
      </div>
  </div>
  
  <div class="profile-container w-100 mt-2 me-2">
      <div class="w-75 mt-5 ms-2">

        <div class="row mb-2">

          <div class="col">
            <label>First Name</label>
            <input type="text" class="form-control bg-color shadow-sm" value="<%= user.username %>" placeholder="First name" name="username" aria-label="First name" disabled>
          </div>

        </div>
  
        <div class="col mb-2">
          <label for="">Phone Number</label>
          <input type="number" class="form-control w-50 bg-color shadow-sm" value="<%= user.phone %>" placeholder="Phone Number" name="phone" aria-label="Last name" disabled> 
        </div>
  
        <div class="col mb-2">
          <label for="">Email</label>
          <input type="email" id="useremailinput" class="form-control bg-color w-50 shadow-sm" value="<%= user.email %>" placeholder="Enter Your EmailAddress" name="email" disabled> 
          <p class="m-0 text-danger" id="useremailmsg"></p>
        </div>

        <div class="mb-3 mb-2">
          <label for="exampleFormControlTextarea1" class="form-label">Address</label> 
          <% for(let address of user.address){ %>
            <% if(address.selected == true){ %>
            <div class="bg-color w-auto p-2 rounded shadow-sm ">
              <div><%= address.personName %></div>
              <div class="text-wrap w-100"><%= address.address %></div>
              <div><%= address.district %></div>
              <div><%= address.phone %></div>
              <div><%= address.pincode %></div>
            </div>
            <% } %>    
          <% } %>
        </div> 
        <a href="/user/user_account/useredit"><button class="btn btn-primary">Edit<i class="bi bi-pencil-fill ps-1"></i></button></a>
      </div> 
  </div>

</div>

