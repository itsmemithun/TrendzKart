<% layout('layouts/boilerplate') %>

<div class="d-flex">

  <div class="side-nav d-flex flex-column align-items-center rounded">
    <i class="bi bi-person-circle text-light" style="font-size: 5rem"></i>
    <h2 class="text-light">Username</h2>
      <div class="m-2 px-2 w-100 d-flex flex-column">
        <button class="btn btn-light mb-3 ">Profile</button>
        <button class="btn btn-light mb-3 ">My Orders</button>
        <button class="btn btn-light mb-3 ">Cart</button>
        <button class="btn btn-light mb-3 ">My Coupons</button>
        <button class="btn btn-light mb-3 ">Manage Address</button>
      </div>
  </div>
  
  <div class="profile-container w-100 mt-2 me-2">
    <form action="/user/user_account" method="post">
      <div class="w-75 mt-5 ms-2">
        <div class="row mb-2">

          <div class="col">
            <label>First Name</label>
            <input type="text" class="form-control" value="<%= user.username %>" placeholder="First name" name="username" aria-label="First name">
          </div>

        </div>
  
        <div class="col mb-2">
          <label for="">Phone Number</label>
          <input type="number" class="form-control w-50" value="<%= user.phone %>" placeholder="Phone Number" name="phone" aria-label="Last name"> 
        </div>
  
        <div class="col mb-2">
          <label for="">Email</label>
          <input type="email" class="form-control w-50" value="<%= user.email %>" placeholder="Enter Your EmailAddress" name="email" aria-label=""> 
        </div>
  
        <div class="mb-3 mb-2">
          <label for="exampleFormControlTextarea1" class="form-label">Address</label>
          <textarea class="form-control w-50" id="exampleFormControlTextarea1" value="<%= user.address %>" name="address" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">edit</button>
      </div> 
    </form>
  </div>

</div>

