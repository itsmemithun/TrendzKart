<% layout('layouts/boilerplate') %>

<div class="login-page d-inline-flex justify-content-center align-items-center">

  <div class="card w-25 h-75 bg-dark rounded-0 rounded-start">
    <div class="card-body">
       <h3 class="text-light">Login</h3>
       <h4 class="text-light">Get access</h4>
       <h4 class="text-light">to your Account</h4>
       <h4 class="text-light">by Just Logging In-</h4>
    </div>
  </div>

  <div class="card w-25 h-75 bg-warning rounded-0 rounded-end">
    <div class="card-body d-flex justify-content-center align-items-center">
      <form action="/user_signin" method="post">
        <div class="d-flex flex-column align-items-center">
          <div class="mb-3">
            <label for="userName" class="form-label fw-medium">Enter Your UserName</label>
              <div class="input-group has-validation">
               <input type="text" class="form-control" id="userName" placeholder="UserName" required>
              </div>
          </div>
          <div class="">
            <label for="validateOTP" class="form-label fw-medium">Enter Your OTP</label>
              <input type="number" id="validateOTP" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-dark mt-3" style="width : 100px">Login</button>
        </div>
      </form>
    </div>
  </div>

</div>