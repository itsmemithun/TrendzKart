<% layout('layouts/boilerplate') %>

<div class="min-vh-100 navmargin min-vw-100">
  <div class="container p-0 mt-4 mb-4 rounded bg-color shadow">
    <div class="row m-0 pb-4 pt-4">
      <div class="col-md-6 col-lg-5 col-xl-4">

       <div class="container d-flex flex-column align-items-center">

          <div class="productImageContainer shadow border-dark-subtle d-flex align-items-center">
            <div class="imgMagnifierContainer">
              <% product.image[0] = product.image[0].replace('public','') %>
              <img class="image" src="<%= product.image[0] %>" alt="">
              <div class="lens"></div>
              <div class="result"></div>
            </div>
          </div>

          <div class="d-flex justify-content-evenly mt-1">
            <% for(i=0; i<product.image.length; i++){ %>
              <% product.image[i] = product.image[i].replace('public','') %>
              <img class="extraProductImage" src="<%= product.image[i] %>" alt="">
            <% } %>  
          </div>

       </div>
        <div class="d-flex justify-content-evenly mt-2">
            <button class="btn btn-dark shadow addToCartBtn" productId="<%= product._id %>" style="width : 150px;">Add to Cart</button>
            <a href="/view/buy/<%= product._id %>"><button class="btn btn-warning shadow" productId="<%= product._id %>" style="width : 150px;">Buy Now</button></a>
        </div>

      </div>

      <div class="border-start col-md-6 col-lg-7 col-xl-8 border-1 border-secondary-subtle">
        <div class="container p-5">
          <h1 class="product-title"><%= product.productName %></h1>
          <div class="d-flex align-items-center">
            <span class="rating-count">0.0<i class="bi bi-star-fill"></i></span>
            <p class="d-inline m-0 ms-2 text-secondary fw-medium product-review">00 rating & 0 reviews</p>
          </div>
          <h3 class="my-2">â‚¹ <%= product.price  %></h3>
          <div class="size-chart d-inline">
            <input type="radio" class="btn-check" name="options-base" id="option5" autocomplete="off" checked>
            <label class="btn shadow" for="option5">S</label>
            
            <input type="radio" class="btn-check" name="options-base" id="option6" autocomplete="off">
            <label class="btn shadow" for="option6">M</label>
            
            <input type="radio" class="btn-check" name="options-base" id="option7" autocomplete="off">
            <label class="btn shadow" for="option7">L</label>

            <input type="radio" class="btn-check" name="options-base" id="option8" autocomplete="off">
            <label class="btn shadow" for="option8">XL</label>
          </div>

          <div class="description">
            <h4 class="text-decoration-underline">Description</h4>
            <div class="container text-wrap">
              <%= product.description %>  
            </div>
          </div>

        </div>
        <div>
        <h3>Related=></h3>
          <div>
            <img src="" alt="">
            <img src="" alt="">
            <img src="" alt="">
            <img src="" alt="">
            <img src="" alt="">
            <img src="" alt="">
          </div>
        </div>
      </div>

    </div>
     

  </div>
</div>

<div class="display-none cart-alert">
  <div class="alert-data"></div>
</div>

<script src="/script/productviewscript.js"></script>