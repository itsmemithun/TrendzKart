<% layout('layouts/boilerplate') %>

<div class="vh-100 vw-100 d-flex align-items-center justify-content-center">
  <div class="w-50 h-50 d-flex flex-column align-items-center justify-content-center border rounded">
    <img class="webLogo" src="/asset/Logo's/20240614_131633.png" alt="">
    <div class="w-50">
      <form action="/passwordRecovery/newCredentials" id="newCredentialForm" method="post">
        <p></p>
        <div class="mb-3">
          <label for="passwordInput" class="form-label">Enter your new password</label>
          <input type="password" class="form-control" id="passwordInput" name="newPassword" required>
        </div>
        <div>
          <label class="form-label" for="confirmPasswordInput">Confirm your password</label>
          <input type="password" id="confirmPasswordInput" name="newPasswordCnf" class="form-control" required>
        </div>
        <p class="text-danger mb-0 d-none" id="warningText">Password does not match*</p>
        <button class="btn w-100 mt-3 btn-primary">Continue</button>
      </form>
    </div>
  </div>
</div>

<script src="/script/passwordValidate.js"></script>